{{#partial "content"}}
    <h3 class="text-center">Sacred Jungle!</h3>
    <h6 class="text-center">The animal conservancy</h6>
    <hr>
    <h4 class="text-center">Animals Spotted In This Region</h4>
    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal Seen</th>
            <th scope="col">Location</th>
            <th scope="col">Ranger</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{animalName}}</td>
                <td>{{readableTimestamp}}</td>
                <td>{{rangerName}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}