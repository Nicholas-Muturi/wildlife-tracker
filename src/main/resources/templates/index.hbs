{{#partial "navlinks"}}
    <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            View Animals
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">Endangered</a>
            <a class="dropdown-item" href="#">Not Endangered</a>
        </div>
    </li>
    <li class="nav-item"><a class="nav-link" href="/sighting/all">Sighting Locations</a></li>
    <li class="nav-item"><a class="nav-link" href="/sighting/new">New Sighting</a></li>
{{/partial}}

{{#partial "content"}}
    <h3 class="text-center">Welcome to Sacred Jungle!</h3>
    <h6 class="text-center">The animal conservancy</h6>
    <hr>
    {{#if sightings}}
        <h4 class="text-center">Here's all the animal sightings so far</h4>
        <table class="table text-center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Animal Seen</th>
                <th scope="col">Location</th>
                <th scope="col">Spotted On</th>
                <th scope="col">Ranger</th>
            </tr>
            </thead>
            <tbody>
            {{#each sightings}}
                <tr>
                    <td>{{animalName}}</td>
                    <td>{{location}}</td>
                    <td>{{readableTimestamp}}</td>
                    <td>{{rangerName}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <h5 class="text-center">No animals sighted yet. Report a sighting to have it appear here</h5>
    {{/if}}
{{/partial}}

{{> layout.hbs}}